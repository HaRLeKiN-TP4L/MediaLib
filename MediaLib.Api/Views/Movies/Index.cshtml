@model IEnumerable<MediaLib.Data.Models.Movie>
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@if (!Model.Any())
{
    <p>Keine Filme vorhanden!</p>
    @Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-dark" })
}
else
{

@Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-dark" })
<p><br /></p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Movie
            </th>
            <th>
                Genre
            </th>
            @*<th>
                Release date
            </th>*@
            <th>
                Media
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td>
                @Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)
            </td>
            <td>
                @movie.Genre.Name
            </td>
            @*<td>
                @movie.ReleaseDate.Value.ToShortDateString()
            </td>*@
            <td>
                @movie.Medium.Name
            </td>
        </tr>
        }
    </tbody>
</table>
    
}

